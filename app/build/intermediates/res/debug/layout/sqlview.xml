<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F0F0F0"
            android:orientation="vertical"
            >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#F0F0F0"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:layout_weight="1.5"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="0dp"
            >

            <TextView
                android:id="@+id/datetext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/drinkLogDate"
                android:textColor="#00B2FF"
                android:textSize="19dp"
                android:gravity="left"
                android:layout_weight="2"
                />

            <TextView
                android:id="@+id/intakevstargettext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/drinkLogintaketarget"
                android:textColor="#00B2FF"
                android:layout_weight="1"
                android:textSize="19dp"
                android:gravity="right"
                />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F0F0F0"
            android:layout_weight="8"
            android:orientation="vertical"
            android:padding="10dp" >

            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#00B2FF"
                android:dividerHeight="1dp" />

            <TextView
                android:id="@+id/empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/noentry"
                android:textSize="22dp" />
        </LinearLayout>

            <com.google.android.gms.ads.AdView
                android:id="@+id/adViewDrinkLog"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                ads:adSize="BANNER"
                android:layout_weight=".5"
                ads:adUnitId="ca-app-pub-2266797178837677/5486393546">
            </com.google.android.gms.ads.AdView>

        </LinearLayout>
    </FrameLayout>

    <ListView
        android:id="@+id/drawerList"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#FFFFFF" >
    </ListView>

</android.support.v4.widget.DrawerLayout><!-- From: file:/home/shubham/AndroidstudioProjects/WaterBalance/app/src/main/res/layout/sqlview.xml -->